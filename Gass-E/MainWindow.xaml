<Window x:Class="Gass_E.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel>

            <Button x:Name="NewFillUp"  Width="107" Click="NewFillUp_Click" Content="New Fill Up" />
            <Label Content="Odometer" HorizontalAlignment="Center" Height="28" x:Name="OdometerLabel" />
            <TextBox Width="200" Height="20" IsReadOnly="False" x:Name="Odometer" Margin="160,0" />
            <Label Content="CostofFillUp" HorizontalAlignment="Center" x:Name="CostofFillUpLabel"></Label>
            <TextBox Width="200" Height="20" IsReadOnly="False" x:Name="CostofFillUp" Margin="160,0" />
            <Label Content="Date" HorizontalAlignment="Center" x:Name="DateLabel"></Label>
            <TextBox Width="200" Height="20" IsReadOnly="False" x:Name="Date"></TextBox>

        </StackPanel>
        <Button x:Name="Reset" Width="100" Height= "20" Content="Reset"/>
    </StackPanel>
</Window>
